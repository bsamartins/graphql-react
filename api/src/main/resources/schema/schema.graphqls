type Query {
    movies(
      first: Int,
      last: Int,
      before: String,
      after: String,
      query: String,
    ): MovieConnection!
    actors: ActorConnection!
}

type Movie @connection {
  id: Int!
  name: String!
  cast: [Cast!]!
  posterUrl: String
}

type Actor @connection {
  id: Int!
  name: String!
}

type Cast {
  character: String!
  actor: Actor!
}
